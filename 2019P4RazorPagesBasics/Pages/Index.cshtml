@page
@model Pages.IndexModel
@{
    ViewData["Title"] = "Calc HomePage";
}

<h1>Kalkulátor v0.0.1</h1>

<form method="post">
    <label asp-for="Data.A"></label>
    <input asp-for="Data.A" />

    <label asp-for="Data.Op"></label>
    <select asp-for="Data.Op" asp-items="Html.GetEnumSelectList<Operation>()"></select>

    <label asp-for="Data.B"></label>
    <input asp-for="Data.B" />
    <span asp-validation-for="Data.B"></span>
    <input type="submit" value="Počítej!" />
