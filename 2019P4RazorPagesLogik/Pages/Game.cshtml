@page
@model GameModel
@{
    ViewData["Title"] = "Game";
}
<h2>Game running...</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="LogikData.Round"></label>
        <input asp-for="LogikData.Round" value="@Model.LogikData.Round" class="form-control" readonly />
        <span asp-validation-for="LogikData.Round" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogikData.LastTry"></label>
        <input asp-for="LogikData.LastTry" class="form-control" />
        <span asp-validation-for="LogikData.LastTry" class="form-text text-danger"></span>
    </div>
    <div>
        <input type="hidden" asp-for="LogikData.Secret" />
    </div>
    <button type="submit" class="btn btn-primary">Try!</button>
</form>

@if (Model.LogikData.Round > 1)
{
<div class="jumbotron">
    @{
        string alerttype = "";
        if (Model.LogikData.SecretToLastTry == 0) { alerttype += "success"; }
        if (Model.LogikData.SecretToLastTry > 0) { alerttype += "primary"; }
        if (Model.LogikData.SecretToLastTry < 0) { alerttype += "danger"; }
    }

    <p class="alert alert-@(alerttype)">
        @Model.LogikData.GetMessage()
    </p>

    @if (Model.LogikData.SecretToLastTry == 0)
    {
        <p><a asp-page="Index" class="btn btn-info">New Game</a></p>
    }

</div>
}
